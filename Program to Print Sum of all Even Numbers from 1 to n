int main()
{
  int i, n, Sum = 0;
 
  printf("\n Please Enter the Maximum Limit Value : ");
  scanf("%d", &n);
  
  printf("\n Even Numbers between 0 and %d are : ", n);
  for(i = 1; i <= n; i++)
  {
    if ( i%2 == 0 ) //Check whether remainder is 0 or not
    {
  	printf("%d  ", i);
        Sum = Sum + i;
    }
  }
  printf("\n The Sum of All Even Numbers upto %d  = %d", n, Sum);

  return 0;
}
